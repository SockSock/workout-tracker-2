<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title (Exercise Name) -->
    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="end"/>

    <!-- Details Section (Sets, Reps, Weight) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Sets Label -->
        <TextView
            android:id="@+id/tvSetsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sets"
            android:textSize="14sp"
            android:gravity="center"/>

        <!-- Reps Label -->
        <TextView
            android:id="@+id/tvRepsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reps"
            android:textSize="14sp"
            android:gravity="center"/>

        <!-- Weight Label -->
        <TextView
            android:id="@+id/tvWeightLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Numerical Values Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- Sets Value -->
        <TextView
            android:id="@+id/tvSetsValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="14sp"
            android:gravity="center"/>

        <!-- Reps Value -->
        <TextView
            android:id="@+id/tvRepsValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10"
            android:textSize="14sp"
            android:gravity="center"/>

        <!-- Weight Value -->
        <TextView
            android:id="@+id/tvWeightValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100 lbs"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Plus and Minus Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="8dp">

        <!-- Minus Button -->
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€“"
            android:textSize="16sp"/>

        <!-- Plus Button -->
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
